---
interface Cat { title: string; issues: string[]; solutions: string[] }
interface Props { categories: Cat[] }
const { categories } = Astro.props as Props;
---
<div class="grid grid-3">
  {categories.map((c) => (
    <div class="card elevated reveal">
      <div class="pill">{c.title}</div>
      <div style="display:grid; gap:10px; margin-top:10px;">
        <div>
          <strong>課題</strong>
          <ul>{c.issues.map(i => (<li>• {i}</li>))}</ul>
        </div>
        <div>
          <strong>解決</strong>
          <ul>{c.solutions.map(s => (<li>• {s}</li>))}</ul>
        </div>
      </div>
    </div>
  ))}
</div>


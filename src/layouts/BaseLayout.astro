---
import "../styles/global.css";
import site from "../data/site.json";
import LinkPill from "../components/LinkPill.astro";
const { title = 'EDEN GREENS PROJECT', description = '藻類培養×ブロックチェーンでCO₂吸収を可視化・価値化', url = 'https://example.com' } = Astro.props;
---
<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={url} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="theme-color" content="#0d231c" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;600;800&display=swap" rel="stylesheet" />
    
    <script type="application/ld+json" is:inline>{
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "" + site.siteName,
      "url": "https://example.com",
      "sameAs": [
        "https://twitter.com/",
        "https://discord.gg/"
      ]
    }</script>
  </head>
  <body>
    <script is:inline>
      const io = new IntersectionObserver((es)=>{
        for (const e of es){ if(e.isIntersecting){ e.target.classList.add('show'); io.unobserve(e.target);} }
      },{threshold: .08});
      addEventListener('DOMContentLoaded',()=>document.querySelectorAll('.reveal').forEach(el=>io.observe(el)));
    </script>
    <header class="site">
      <div class="container nav">
        <a class="brand" href="#top">
          {site.logo ? (
            <img src={site.logo} alt={site.siteName} class="logo" />
          ) : (
            <span class="dot"></span>
          )}
          <span class="sr-only">{site.siteName}</span>
        </a>
        <nav style="display:flex; gap:16px; align-items:center">
          <a href="#overview">概要</a>
          <a href="#applications">応用分野</a>
          <a href="#problems">課題と解決</a>
          <a href="#ecosystem">エコシステム</a>
          <a href="#token">Token</a>
          <a href="#ieo">IEO</a>
          <a href="#faq">FAQ</a>
          <a class="btn primary" href="#cta" aria-label="IEOに参加">参加する</a>
        </nav>
      </div>
    </header>
    <main id="top">
      <slot />
    </main>
    <footer>
      <div class="container">
        <div style="display:flex; justify-content:space-between; gap:16px; align-items:center; flex-wrap: wrap;">
          <div>© {new Date().getFullYear()} {site.siteName} — All rights reserved.</div>
          <div style="display:flex; gap:14px; align-items:center; flex-wrap:wrap;">
            <a class="pill" href="/whitepaper.pdf">Whitepaper</a>
            <LinkPill href={site.links.github} label="GitHub" />
            <LinkPill href={site.links.twitter} label="X/Twitter" />
            <LinkPill href={site.links.discord} label="Discord" />
            <LinkPill href={site.links.docs} label="Docs" />
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
